#!/usr/bin/make -f
# Debian rules file for irh-desktop

export DH_VERBOSE=1
export PYBUILD_NAME=irh-desktop

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_install:
	dh_auto_install
	# Install desktop file
	install -D -m 644 debian/irh-desktop.desktop $(DESTDIR)/usr/share/applications/irh-desktop.desktop

override_dh_auto_test:
	# Skip tests during package build
	true

override_dh_installdocs:
	dh_installdocs README.md
